<div class="row">
  <%= render :layout => 'events/card_layout', :locals => {header: "Event Info"} do %>


          <label>Name:</label> <%= @event.name %><br>
          <label>Date:</label> <%= date_human @event %><br>
          <label>Attendee Count:</label> <%= @event.contacts_count %><br>
          <label>Guest Count:</label> <%= @event.guests_count %>
  <% end %>
  <%= render :layout => 'events/card_layout', :locals => {header: "Attendee List"} do %>
          <% @event.contacts.each do |contact| %>
            <%= link_to contact.name, contact_path(contact) %><br>
          <% end %>
  <% end %>
</div>

<div class="row justify-content-center">
  <%= button_to "Edit Event & Add Contacts", edit_event_path(@event), :method => :get, :class => "btn btn-primary"  %>
  <%= button_to "View All Events", events_path, :method => :get, :class => "btn btn-primary" %>
  <%= button_to "View Detailed Contacts", event_contacts_path(@event), :method => :get, :class => "btn btn-primary"  %>
</div>
