



<%= render :layout => 'layouts/12_col_view', :locals => {:header => (@event.name + " on " + display_date(@event)), :description => "Use the buttons below to change viewing options"} do %>

  <%= render :partial => "layouts/flash_message" %>

<div class="row justify-content-center center-this-div">
  <%= render :layout => 'events/card_layout', :locals => {header: "Event Info", icon_here: "info"} do %>
          <label>Name:</label> <%= @event.name %><br>
          <label>Date:</label> <%= display_date(@event) %><br>
          <label>Created On:</label> <%= @event.created_at.strftime("%B %-d, %Y") %><br>

  <% end %>
  <%= render :layout => 'events/card_layout', :locals => {header: "Head Counts", icon_here: "person"} do %>
          <label>Student Count:</label> <%= @event.contacts_count %><br>
          <label># Untracked:</label> <%= @event.guest_count %><br>
          <label>Staff Count:</label> <%= @event.staff_count %>

  <% end %>
  <div class="col-lg-4 justify-content-center">
      <%= link_to new_event_contact_path(@event), :class => "btn btn-primary btn-block" do %>
        Create Contact <i class="material-icons">person_add</i>
        <% end %>
      <%= link_to edit_event_path(@event), :class => "btn btn-primary btn-block" do %>
        Modify Event <i class="material-icons">edit</i>
        <% end %>
      <%= link_to new_event_path, :class => "btn btn-primary btn-block" do %>
        Create Event <i class="material-icons">library_add</i>
        <% end %>
        <br>
</div>
</div>

<div class="row">
<div class="col-lg-12">
  <div class="table-responsive">
    <table class="table table-hover">
        <thead class="">
          <tr>
              <th><%= "Name" %></th>
              <th><%= "Action" %></th>
              <th><%= "Staff" %></th>
              <th><%= "Email" %></th>
              <th><%= "Gender" %></th>
          </tr>
        </thead>
        <tbody>
            <% @contacts.each do |contact| %>
              <tr>
                <td>
                  <%= contact.name %>
                </td>
                <td>
                  <%= link_to edit_contact_path(contact) do %>
                    <i class="material-icons">edit</i>
                  <% end %>
                  <%= link_to contact_path(contact) do %>
                    <i class="material-icons">zoom_in</i>
                  <% end %>
                </td>
                <td><%= contact.user_name %></td>
                <td><%= contact.email %></td>
                <td><%= contact.gender %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
  </div>
<% end %>
