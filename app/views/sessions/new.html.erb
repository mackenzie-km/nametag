<div class="card">
  <div class="card-header card-header-primary">
    <h3 class="card-category">Welcome to Nametag</h3>
    <p class="card-category">Complete your profile</p>
  </div>

<div class="card-body">

  <%= flash[:message] %>

  <h2> Login </h2>

  <%= form_for User.new, :url => "/login" do |f| %>
    <%= f.label "Email" %>
    <%= f.text_field :email %><br>

    <%= f.label "Password" %>
    <%= f.text_field :password %><br>

    <%= f.submit "Submit" %><br>
  <% end %>
  <%= button_to('Sign Up', '/users/new', method: 'get') %>
  <%= button_to('Log in with Google!', '/auth/google_oauth2') %>

  </div>
</div>
