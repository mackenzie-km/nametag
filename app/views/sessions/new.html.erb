<%= render :layout => 'layouts/12_col_view', :locals => {:header => "Login", :description => "Sign up/login in to keep track of your contacts & events"} do %>

<%= render partial: "layouts/flash_message", locals: {thing: @user} %>

  <%= form_for User.new, :url => "/login" do |f| %>
    <%= f.label "Email" %>
    <%= f.text_field :email, class: "form-control" %><br>

    <%= f.label "Password" %>
    <%= f.text_field :password, class: "form-control" %><br>

<div class="row justify-content-center">
    <%= f.submit "Submit", :class => "btn btn-primary" %><br>
  <% end %>
  <%= button_to('Sign Up', '/users/new', method: 'get', class: "btn btn-primary") %>
  <%= button_to('Log in with Google!', '/auth/google_oauth2', class: "btn btn-primary") %>
</div>

<% end %>
