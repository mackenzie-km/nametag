<%= render :layout => 'layouts/card_header', :locals => {:header => "Welcome to Nametag", :description => "Sign up/login in to keep track of your contacts & events"} do %>

  <%= flash[:message] %>

  <h2> Login </h2>

  <%= form_for User.new, :url => "/login" do |f| %>
    <%= f.label "Email" %>
    <%= f.text_field :email %><br>

    <%= f.label "Password" %>
    <%= f.text_field :password %><br>

    <%= f.submit "Submit", :class => "btn btn-primary" %><br>
  <% end %>
  <%= button_to('Sign Up', '/users/new', method: 'get', class: "btn btn-primary") %>
  <%= button_to('Log in with Google!', '/auth/google_oauth2', class: "btn btn-primary") %>

<% end %>
