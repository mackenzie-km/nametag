<%= render :layout => 'layouts/card_header', :locals => {:header => "Welcome to Nametag", :description => "Sign up/login in to keep track of your contacts & events"} do %>

  <div class="table-responsive">
    <table class="table table-hover">
        <thead class="">
          <tr>
              <th> User </th>
              <th> Admin Level </th>
              <th> Edit Access </th>
              <th> Delete User </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %> </td>
              <td><%= user.admin_level.to_s %></td>
              <td><%= button_to "Edit", edit_user_path(user), :method => :get %></td>
              <td><%= button_to "Delete", user_path(user), :method => :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

<% end %>
