<%= render :layout => 'layouts/12_col_view', :locals => {:header => "Create a New User", :description => "Sign up/login in to keep track of your contacts & events"} do %>

  <%= render partial: "layouts/error_message", locals: {thing: @user} %>

  <%= form_for @user do |f| %>
    <%= f.label "Email" %>
    <%= f.text_field :email, class: "form-control" %><br>

    <%= f.label "Password" %>
    <%= f.text_field :password, class: "form-control"  %><br>

    <%= f.label "Access Code" %>
    <%= f.text_field :admin_level, class: "form-control"  %><br>

    <div class="row">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  <% end %>

    <%= button_to('Log in with Google!', '/auth/google_oauth2', class: "btn btn-primary") %>
    </div>
<% end %>
